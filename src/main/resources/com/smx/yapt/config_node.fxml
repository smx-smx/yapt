<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
         prefHeight="22.0" prefWidth="53.0" stylesheets="@confedit.css"
         type="javafx.scene.control.TreeCell"
         fx:controller="com.smx.yapt.ConfigTreeCell">
    <graphic>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="name" GridPane.halignment="LEFT" />
            <HBox fx:id="valueBox" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                      <TextField fx:id="value" />
                  <Button fx:id="updateValue" mnemonicParsing="false" text="Set" onAction="#onUpdateValue"/>
               </children>
            </HBox>
            </children>
        </GridPane>
    </graphic>
</fx:root>
